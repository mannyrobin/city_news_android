<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:overScrollMode="never"
        android:layout_above="@+id/bottom_frame"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/bottom_frame"
        android:background="@color/intro_bottom_panel"
        android:layout_alignParentBottom="true"
        tools:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
              android:id="@+id/indicator"
              tools:minHeight = "30dp"
              android:layout_alignParentTop="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="4dp"

              android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@android:id/button1"
            android:theme="@style/AppTheme.Button"
            android:layout_below="@+id/indicator"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"

            android:text="@string/further"
            android:layout_marginBottom="@dimen/intro_next_button_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>

