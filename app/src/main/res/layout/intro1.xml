<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <include
             layout="@layout/intro1_logo"
             android:layout_alignParentTop="true"
             android:id="@+id/splash"
        />
    -->



    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/splash_marginLeft"
        android:layout_marginRight="@dimen/splash_marginRight"
        android:layout_marginTop="@dimen/splash_marginTop"
        android:layout_alignParentTop="true"
        />


    <!--android:layout_alignParentTop="true"-->


    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/intro1_title_margin_top"
        android:text="@string/intro1_title"
        android:textStyle="bold"
        android:textSize="@dimen/intro1_title1_size"

        android:textColor="@color/logo_text"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"

        />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@android:id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/intro1_title2_margin_top"
        android:gravity="center"
        tools:text="@string/intro1_text"
        android:textSize="@dimen/intro1_title2_size"
        android:textColor="@color/logo_text"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        />
</RelativeLayout>

