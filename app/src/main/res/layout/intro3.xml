<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/primary">


    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/intro3_icon_size"
        android:layout_height="@dimen/intro3_icon_size"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="@dimen/intro3_icon_margin_top"
        android:adjustViewBounds="true"
        android:src="@drawable/ok"

        />

    <!--
    android:src="@drawable/indicator_dot_grey"
        -->

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="24dip"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/intro3_title"
        android:textColor="@color/logo_text"
        android:textSize="@dimen/intro3_title_size"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@android:id/text1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/o1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="@dimen/intro3_icon_margin_top"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="@string/intro3_opt1"
            android:textColor="@color/logo_text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/dash"
            />

        <TextView
            android:id="@+id/o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="@string/intro3_opt2"
            android:textColor="@color/logo_text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/dash"
            />

        <TextView
            android:id="@+id/o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="@string/intro3_opt3"
            android:textColor="@color/logo_text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/dash"
            />

        <TextView
            android:id="@+id/o4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="@string/intro3_opt4"
            android:textColor="@color/logo_text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/dash"
            />

        <TextView
            android:id="@+id/o5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="@string/intro3_opt5"
            android:textColor="@color/logo_text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/dash"
            />

    </LinearLayout>


</RelativeLayout>